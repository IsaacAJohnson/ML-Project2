#Run the principle component analysis
pr_bank <- prcomp(x = select(bank1, -Churn), scale = T, center = T)
summary(pr_bank)
#Show variance plot
screeplot(pr_bank, type = "lines")
#Visualize biplots
biplot(pr_bank)
biplot(pr_bank, choices = c(3,4))
#Factor loadings
pr_bank$rotation
#Loadings times values for all rows
head(pr_bank$x)
